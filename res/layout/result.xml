<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+layout/layout_result"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="3dp"  >
	
		<TextView  
		    android:id="@+id/result_header"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:text="@string/result_header" />
		
		<TableLayout 
			android:id="@+id/result_table" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:background="@drawable/ic_frame_background">

				<TableRow style="@style/ResultTableRaw">
					<TextView style="@style/ResultTableText"  
				    android:id="@+id/result_name"/>
				</TableRow>
				
				<TableRow style="@style/ResultTableRaw">
					<TextView style="@style/ResultTableText"  
				    android:id="@+id/result_occupation"/>
				</TableRow>

				<TableRow style="@style/ResultTableRaw">
					<TextView style="@style/ResultTableText"  
				    android:id="@+id/result_address"/>
				</TableRow>
				
				<TableRow style="@style/ResultTableRaw">
					<TextView style="@style/ResultTableText"  
				    android:id="@+id/result_city_postal"/>
				</TableRow>
				
				<TableRow style="@style/ResultTableRaw">
					<TextView style="@style/ResultTableText"  
				    android:id="@+id/result_region"/>
				</TableRow>

		</TableLayout>
		
		<Button 
		android:id="@+id/result_btn_add_update" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:paddingTop="5sp"
		android:layout_gravity="right"
		android:text="@string/result_save_btn">
		</Button>
		
</LinearLayout>			
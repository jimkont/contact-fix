<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+layout/tab_search"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="20dp"
android:orientation="vertical">
		<TextView  
	    android:id="@+id/tab_search_info"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/tab_search_info" />
		<EditText
	       android:id="@+id/entry"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:inputType="phone"/>
		<Button
	       android:id="@+id/tab_search_btn"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="right"
	       android:drawableRight="@drawable/ic_tab_search_selected"
	       android:drawablePadding="5sp"
	       android:text="@string/tab_search_btn" />
		
</LinearLayout>